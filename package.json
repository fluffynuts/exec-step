{
  "name": "exec-step",
  "version": "0.18.0",
  "description": "executes a step in a series with console feedback",
  "main": "dist/index.js",
  "scripts": {
    "test": "jest",
    "demo": "node -r ts-node/register tests/demo.ts",
    "build": "tsc",
    "autolint": "nodemon -w src -w tests -w eslint.config.mjs -e ts -x \"npm run lint || exit 1\"",
    "lint": "eslint -c eslint.config.mjs src/**/*.ts",
    "pretest": "rimraf .jest-cache",
    "zarro": "zarro",
    "prerelease": "run-s build lint test",
    "release": "cross-env VERSION_INCREMENT_STRATEGY=minor run-s \"zarro release-npm\"",
    "prerelease-beta": "run-s build lint test",
    "release-beta": "cross-env BETA=1 VERSION_INCREMENT_STRATEGY=patch run-s \"zarro release-npm\""
  },
  "keywords": [],
  "author": {
    "name": "Davyd McColl",
    "email": "davydm@gmail.com"
  },
  "license": "BSD-3-Clause",
  "files": [
    "dist/**/*"
  ],
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "@faker-js/faker": "^9.9.0",
    "@types/ansi-colors": "^3.2.6",
    "@types/jest": "^30.0.0",
    "cross-env": "^10.0.0",
    "eslint": "^9.32.0",
    "expect-even-more-jest": "^1.20.0",
    "jest": "^30.0.5",
    "nodemon": "^3.1.10",
    "npm-run-all": "^4.1.5",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.39.0",
    "zarro": "^1.202.0"
  },
  "dependencies": {
    "ansi-colors": "^4.1.3"
  }
}